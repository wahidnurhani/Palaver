<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.unidue.palaver">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_palaver_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity
            android:name=".ui.ChatRoomActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity android:name=".ui.FriendManagerActivity" />
        <activity android:name=".ui.ChatManagerActivity" />
        <activity
            android:name=".ui.RegisterActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.LoginActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".system.service.ServiceFetchFriend" />
        <service android:name=".system.service.ServiceAddFriend" />
        <service android:name=".system.service.ServiceFetchAllChat" />
        <service android:name=".system.service.ServiceSendMessage" />
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>